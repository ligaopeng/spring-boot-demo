<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lgp.dao.cluster.UserAccountDao">
    <parameterMap id="User" type="com.lgp.entity.useraccount.UserAccount"/>
    <resultMap id="BaseResultMap" type="com.lgp.entity.useraccount.UserAccount">
        <result column="id" property="id" />
        <result column="user_name" property="userName" />
    </resultMap>
    <sql id="Base_Column_List">
		id, user_name
	</sql>
    <select id="getUserAccount" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List" />
        from user_account
        where id = #{id, jdbcType=INTEGER}
    </select>
</mapper>